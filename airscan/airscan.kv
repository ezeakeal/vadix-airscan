#:kivy 1.0
#:import kivy kivy
#:import win kivy.core.window
#:import WipeTransition kivy.uix.screenmanager.SlideTransition
#:import CheckBox kivy.uix.checkbox
#:import webbrowser webbrowser

ScreenManagement:
    transition: WipeTransition()
    MainScreen:
    ScanScreen:
    ResultScreen:

<MainScreen>:
    name: "main"
    canvas:
        Color:
            rgb: 1,1,1
        Rectangle:
            source: "assets/background.png"
            size: self.size

    Image:
        size_hint: 0.5, 0.5
        source: 'assets/vadix_logo.png'
        pos_hint: {'center_x':.85, 'center_y':.2}

    BoxLayout:
        padding: 10
        spacing: 10
        size_hint: 0.8, None
        pos_hint: {'top': 0.7, 'center_x': 0.5}
        height: 44
        Label:
            text_size: self.width, None
            halign: 'center'
            font_size: sp(26)
            color: (1, 1, 1, .8)
            text: "Please ensure you are connected to the host\'s WiFi network before beginning the scan!"

    Button:
        size_hint: 0.4, 0.15
        border: 3, 3, 3 ,3
        pos_hint: {'center_x':.5, 'center_y':.4}
        background_down: 'assets/start_button_down.png'
        background_normal: 'assets/start_button.png'
        on_release: app.root.current = "scanning"

    BoxLayout:
        padding: 10
        spacing: 10
        size_hint: 0.8, None
        pos_hint: {'top': 0.2, 'center_x': 0.5}
        height: 44
        Label:
            text_size: self.width, None
            halign: 'center'
            font_size: sp(14)
            color: (1, 1, 1, .8)
            text: 'This application must not be used in any way which is unlawful, illegal, fraudulent or harmful, or in connection with any unlawful, illegal, fraudulent or harmful purpose or activity.'


<ScanScreen>:
    name: "scanning"
    canvas:
        Color:
            rgb: 1,1,1
        Rectangle:
            source: "assets/background.png"
            size: self.size

    Image:
        size_hint: 0.5, 0.5
        source: 'assets/vadix_logo.png'
        pos_hint: {'center_x':.85, 'center_y':.2}

    BoxLayout:
        size_hint: 0.9, 0.5
        pos_hint: {'center_x':.5, 'center_y':.55}
        Label:
            id: status_label
            font_size: sp(16)
            height: 24
            text_size: self.width, None
            color: (1, 1, 1, .8)
            text: 'Beginning scan pipeline..'

    ProgressBar:
        id: progress_bar
        max: 100
        value: 0
        height: '10dp'
        size_hint: (0.9, 0.6)
        pos_hint: {'center_x':.5, 'center_y':.5}


<ResultScreen>:
    name: "result"

    canvas:
        Color:
            rgb: 1,1,1
        Rectangle:
            source: "assets/background.png"
            size: self.size
    Image:
        size_hint: 0.5, 0.5
        source: 'assets/vadix_logo.png'
        pos_hint: {'center_x':.85, 'center_y':.2}

    BoxLayout:
        orientation: "vertical"
        id: summary_main
        size_hint: 0.9, 0.85
        pos_hint: {'center_x':.5, 'top': 0.85}
        spacing: 25
        opacity: 0

        Image:
            id: summary_image
            size_hint: 1.0, 0.4
            source: 'assets/danger.png'
            pos_hint: {'center_x':.5, 'top':.3}

        BoxLayout:    
            orientation: "vertical"
            spacing: 5
            size_hint: 1.0, 0.2
            pos_hint: {'center_x':.5, 'top':.4}
            Label:
                id: summary_string
                font_size: sp(25)
                color: (1, 1, 1, .8)

            Label:
                id: summary_substring
                font_size: sp(12)
                color: (1, 1, 1, .7)

            Label:
                text: '[ref=some][u]Press here for more info[/u][/ref]'
                font_size: sp(20)
                markup: True
                color: (0.3, 0.3, 1.0, .8)
                on_ref_press: webbrowser.open("http://blog.vadix.io/2019/04/08/airscan/")

        GridLayout:
            id: summary_grid
            font_size: sp(8)
            cols: 5
            row_force_default: True
            row_default_height: 40




